{
    "name": "Flutter Dev Container",
    "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
    "features": {
      "ghcr.io/devcontainers-contrib/features/flutter:1": {}
    },
    "postCreateCommand": "flutter doctor && flutter pub get",
    "customizations": {
      "vscode": {
        "extensions": [
          "Dart-Code.dart-code",
          "Dart-Code.flutter"
        ]
      }
    }
  }